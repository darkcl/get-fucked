{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist"],
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "~lib/*": ["src/lib/*"],
      "~core/*": ["src/core/*"]
    }
  }
}
